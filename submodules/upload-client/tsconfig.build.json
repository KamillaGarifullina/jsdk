{
  "compilerOptions": {
    "declaration": false,
    "target": "es5",
    "module": "ESNext",
    "lib": ["es2015", "dom", "es2018.promise"],
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strict": true,
    "moduleResolution": "node",
    "outDir": "lib",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "test"]
}
