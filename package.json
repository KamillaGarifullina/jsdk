{
  "name": "uc-blocks",
  "version": "0.0.5",
  "description": "Building blocks for Uploadcare products integration",
  "type": "module",
  "module": "index.js",
  "repository": "https://github.com/uploadcare/uc-blocks/",
  "files": [
    "abstract/*",
    "blocks/*",
    "solutions/*",
    "submodules/*",
    "web/*",
    "index.js",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "setup": "npm i",
    "test": "test",
    "release": "shipjs prepare",
    "dev": "wds"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.15.7",
    "@babel/preset-env": "^7.15.6",
    "@types/node": "^17.0.14",
    "@web/dev-server": "^0.1.30",
    "esbuild": "^0.14.21",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^1.3.1",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "prettier-plugin-jsdoc": "0.0.17",
    "shipjs": "^0.24.2",
    "typescript": "^4.5.5"
  },
  "eslintIgnore": [
    "submodules",
    "web"
  ],
  "eslintConfig": {
    "extends": [
      "eslint-config-prettier"
    ],
    "rules": {
      "no-unused-vars": "off",
      "no-console": "off",
      "max-classes-per-file": "off",
      "prefer-const": "off",
      "no-param-reassign": "off",
      "guard-for-in": "off",
      "no-restricted-syntax": "off",
      "class-methods-use-this": "off",
      "dot-notation": "off",
      "no-plusplus": "off",
      "no-return-await": "off",
      "no-await-in-loop": "off",
      "one-var": "off",
      "default-case": "warn",
      "no-shadow": "warn",
      "no-prototype-builtins": "off",
      "prefer-template": "off",
      "lit/no-invalid-html": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "semi": true,
    "arrowParens": "always",
    "printWidth": 120,
    "parser": "jsdoc-parser"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "tsc --skipLibCheck --allowJs --noEmit",
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "author": "Uploadcare Inc.",
  "license": "MIT",
  "dependencies": {
    "esbuild-node-externals": "^1.4.1"
  }
}