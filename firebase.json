{
  "hosting": {
    "public": "./",
    "ignore": [
      "firebase.json",
      "package-lock.json",
      "package.json",
      "re4ma.cfg.json",
      "tsconfig.json",
      "**/.*",
      ".*",
      "**/node_modules/**",
      "node_modules",
      "build-site.js"
    ],
    "headers": [
      {
        "source": "*",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      }
    ]
  }
}